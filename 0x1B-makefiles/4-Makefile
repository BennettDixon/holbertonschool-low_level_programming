CC=gcc
SRC = holberton.c main.c
OBJ = $(SRC:.c=.o)
NAME=holberton
RM=rm
CFLAGS = -Wall -Werror -Wextra -pedantic

all : $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

.PHONY : clean
clean :
	-$(RM) -f *~ $(NAME)

.PHONY : oclean
oclean :
	-$(RM) -f $(OBJ)

.PHONY : fclean
fclean :
	-$(RM) -f ~* $(NAME) $(OBJ)

re :
	$(CC) $(CFLAGS) -c $(SRC) 
