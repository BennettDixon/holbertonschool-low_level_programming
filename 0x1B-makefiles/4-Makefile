CC=gcc
SRC = holberton.c main.c
OBJ = holberton.o main.o
NAME=holberton
RM=rm
CFLAGS = -Wall -Werror -Wextra -pedantic

all : $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

.PHONY : clean
clean :
	-$(RM) -f *~ $(NAME)

.PHONY : oclean
oclean :
	-$(RM) -f $(OBJ)

.PHONY : fclean
fclean :
	-$(RM) -f ~* $(NAME) $(OBJ)

re :
	$(CC) $(CFLAGS) -c $(SRC) 

$(OBJ) : m.h
	$(CC) $(SRC) $(CFLAGS) -c	
